<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/textbox"
        android:backgroundTint="@color/white"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/relative_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/txt_id_services"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_id_loja"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ico_business" />

            <TextView
                android:id="@+id/txt_name_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/img_logo"
                android:fontFamily="@font/semibold"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/relative_layout_1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.1"
            android:background="#7C374651"
            android:elevation="1dp" />

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_3"
            android:background="@drawable/img_corners"
            android:backgroundTint="@color/green"
            android:padding="2dp"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_3"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/img_check"
            android:fontFamily="@font/light"
            android:text="Pedido concluÃ­do"
            android:textColor="@color/dark_blue"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_qntd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_check"
            android:layout_marginTop="10dp"
            android:background="@drawable/mini_border"
            android:fontFamily="@font/regular"
            android:padding="2dp"
            android:text="1"
            android:textColor="@color/dark_blue"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_check"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txt_qntd"
            android:fontFamily="@font/light"
            android:text=""
            android:textColor="@color/dark_blue"
            android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>