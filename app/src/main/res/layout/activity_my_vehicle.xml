<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Activitys.MyVehicle">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic__arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="AutomÃ³vel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_2"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Modelo"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_model"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:fontFamily="@font/regular"
            android:text=""
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_view_1"
            android:fontFamily="@font/bold"
            android:text="Marca"
            android:layout_marginStart="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_brand"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_3"
            android:fontFamily="@font/regular"
            android:layout_toRightOf="@id/txt_model"
            android:text=""
            android:layout_marginStart="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/text_view_4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_brand"
            android:fontFamily="@font/bold"
            android:text="Categoria"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_4"
            android:fontFamily="@font/regular"
            android:text=""
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_view_6"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_brand"
            android:layout_toRightOf="@id/text_view_4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/bold"
            android:text="Cor"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_color"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_6"
            android:fontFamily="@font/regular"
            android:text=""
            android:layout_toRightOf="@id/txt_category"
            android:layout_marginStart="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="Editar"
        android:textAllCaps="false"
        android:fontFamily="@font/bold"
        android:textSize="16dp"
        android:background="@drawable/button_blue"
        android:elevation="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>